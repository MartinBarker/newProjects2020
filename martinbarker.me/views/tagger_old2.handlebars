<script type="text/javascript" src="/static/assets/js/tagger.js"></script>
<script src="https://unpkg.com/moment"></script>

<!-- page main content -->
<div class="container-fluid">
    <div class="row">
        <!-- main content -->
        <main role="main" class="col-md-9 ml-sm-5 col-lg-10 pt-3 px-4">
            
            <!-- page content  -->
            <div id="content">
                <div id="post-content">

                    <!-- tagger -->
                    <div>

                    </div>
                    <!-- Page Title / Intro -->
                    <h1 class="widgettitle"><strong>Generate a timestamped tracklist</strong></h1>
                    <div>Select multiple audio files or input a Discogs URL, and you will a timestamped tracklist,perfect for YouTube videos! </div>
                    <hr>

                    <!-- Input Option 1 -->
                    <h4 class="widgettitle"><strong>Input Option 1:</strong></h4>
                    
                    <form>
                        <input type="text" placeholder='Discogs release URL' name="url" id="urlInput">
                        <button id='urlInputButton' name="data" type="button" onclick="inputOption1(document.getElementById('urlInput').value)">Submit</button> Input a Discogs URL like <a href="https://www.discogs.com/Le-Car-Auto-Biography/release/41048">this</a>.
                    </form>
                    <hr>

                    <!-- Input Option 2 -->
                    <h4 class="widgettitle"><strong>Input Option 2:</strong></h4>
                    <input type="file" id="file" multiple="multiple"/>
                    <audio id="audio"></audio>
                    <hr>

                    <!-- Output -->

                    <h4 class="widgettitle"><strong>Output:</strong></h4>
                    
                    <textarea id="inputBox" rows="4" cols="70" placeholder="Select an input method"></textarea>
                    
                    <br>
                    <button id='copyToClipboarad' onclick="copyToClipboard('#inputBox')" type="button">Copy</button>
                    
                    <!--
                    <hr>
                    <div>Contribute to this website <a href='https://github.com/MartinBarker/martinbarker.me'>here</a>.</div>
                    <iframe width="560" height="315" src="https://www.youtube.com/embed/-BZf07TuGqY" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe> 
                    -->


                    <!-- discogstagger -->
                    <div>
                        <hr>
                        <!-- Page Title / Intro -->
                        <h1 class="widgettitle"><strong>metadata tags</strong></h1>
                        <div>Input a Discogs URL and click 'Submit' to generate a list of comma seperated metadata tags.
                            Edit which tags you want to appear in the box with the table's sliders and checkboxes! </div>
                        
                        <!-- Discogs Input -->
                        <h4 class="widgettitle"><strong>Input:</strong> </h4>
                        <form>
                            <input type="text" placeholder='Discogs URL' name="url" id="urlInput">
                            <button id='urlInputButton' name="data" type="button"
                                onclick="getTags(document.getElementById('urlInput').value)">Submit</button>
                        </form>

                        <hr>

                        <!-- Output -->

                        <h4 class="widgettitle"><strong>Output:</strong></h4>

                        <textarea id="tagsBox" rows="4" cols="70" placeholder="Input a Discogs URL and click 'Submit'"></textarea>
                        <div id="charCount">Number of characters: 0</div>
                        <button id='copyToClipboarad' onclick="copyToClipboard('#inputBox')" type="button">Copy</button>

                        <hr>

                        <!-- Edit Tags -->
                        <h4 class="widgettitle"><strong>Edit Tags:</strong></h4>

                        <table align="center" id="adjustments">
                            <tbody>
                                <!-- Columns -->
                                <tr>
                                    <th>Include</th>
                                    <th>Tags Type</th>
                                    <th>Depth</th>
                                    <th># of Tags</th>
                                </tr>

                                <!-- Artists -->
                                <tr>
                                    <!-- Checkbox -->
                                    <td>
                                        <input type="checkbox" class="releaseArtistsCheckbox" id="releaseArtistsCheckbox"
                                            checked="" onchange="prepUpdateTagsBox()">
                                    </td>
                                    <!-- Description -->
                                    <td>Release Artist(s)</td>
                                    <!-- Depth -->
                                    <td>
                                        <input type="range" class="releaseArtistsSlider" id="releaseArtistsSlider" min="0"
                                            max="100" value="100" onchange="prepUpdateTagsBox()">
                                        <div id="releaseArtistsSliderValue">100%</div>
                                    </td>
                                    <!-- # of Tags -->
                                    <td id='releaseArtistsNumber'>0</td>
                                </tr>

                                <!-- Release Info -->
                                <tr>
                                    <td>
                                        <input type="checkbox" class="releaseInfoCheckbox" id="releaseInfoCheckbox"
                                            checked="" onchange="prepUpdateTagsBox()">
                                    </td>
                                    <td>Release Info</td>
                                    <td>
                                        <input type="range" class="releaseInfoSlider" id="releaseInfoSlider" min="0"
                                            max="100" value="100" onchange="prepUpdateTagsBox()">
                                        <div id="releaseInfoSliderValue">100%</div>
                                    </td>
                                    <!-- # of Tags -->
                                    <td id='releaseInfoNumber'>0</td>
                                </tr>

                                <!-- Tracklist -->
                                <tr>
                                    <td>
                                        <input type="checkbox" class="tracklistCheckbox" id="tracklistCheckbox" checked=""
                                            onchange="prepUpdateTagsBox()">
                                    </td>
                                    <td>Tracklist</td>
                                    <td>
                                        <input type="range" class="tracklistSlider" id="tracklistSlider" min="0" max="100"
                                            value="100" onchange="prepUpdateTagsBox()">
                                        <div id="tracklistSliderValue">100%</div>
                                    </td>
                                    <!-- # of Tags -->
                                    <td id='tracklistNumber'>0</td>
                                </tr>

                                <!-- Combinations -->
                                <tr>
                                    <td>
                                        <input type="checkbox" class="combinationsCheckbox" id="combinationsCheckbox"
                                            checked="" onchange="prepUpdateTagsBox()">
                                    </td>
                                    <td>Combinations</td>
                                    <td>
                                        <input type="range" class="combinationsSlider" id="combinationsSlider" min="0"
                                            max="100" value="100" onchange="prepUpdateTagsBox()">
                                        <div id="combinationsSliderValue">100%</div>
                                    </td>
                                    <!-- # of Tags -->
                                    <td id='combinationsNumber'>0</td>
                                </tr>

                            </tbody>
                        </table>

                        <!-- discogstagger style -->
                        <style type=text/css>
                            table {
                                font-family: arial, sans-serif;
                                border-collapse: collapse;
                                width: 100%;
                            }



                            #adjustments td,
                            #adjustments th {
                                border: 1px solid #ddd;
                                padding: 8px;
                            }

                            #adjustments tr:nth-child(even) {
                                background-color: #f2f2f2;
                            }

                            #adjustments th {

                                background-color: rgb(48, 48, 48);
                                color: white;
                            }
                        </style>

                    </div> <!-- ./discogstagger -->

                </div>
            </div>




        </main>
    </div>
</div>

<br><br>